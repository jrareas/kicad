* Sig&SysProc.lib Kubov V.I. 29.08.2010

* ------------------ Base ------------------

.subckt amp in out
E1 out 0 in 0 {K}
.param K=1
.ends amp

.subckt ampInv in out
E1 out 0 in 0 {-K}
.param K=1
.ends ampInv

.subckt sum in1 in2 out
E1 N001 0 in1 0 1
E2 out N001 in2 0 1
.ends sum

.subckt subtr inP inN out
E1 N001 0 inN 0 -1
E2 out N001 inP 0 1
.ends subtr

.subckt mul in1 in2 out
B1 out 0 V=V(in1)*V(in2)
R1 in1 0 1G
R2 in2 0 1G
.ends mul

.subckt const p 
V1 p 0 {C}
.ends const

.subckt div in1 in2 out
B1 out 0 V=V(in1)/V(in2)
R1 in1 0 1G
R2 in2 0 1G
.ends div

* ----------------- Integral & Derivative -------------

.subckt integ in out
G1 0 out in 0 1
C1 out 0 {1/K} ic=0
.param K=1.0
.ends integ

.subckt integT in out
G1 0 out in 0 1
C1 out 0 {T} ic=0
.param T=1e-3
.ends integT

.subckt deriv in out
C1 d in 1e-21
R1 d 0 1
B1 out 0 V=V(d)*1e21*{K}
.param K=1.0
.ends deriv

.subckt derivT in out
C1 d in 1e-21
R1 d 0 1
B1 out 0 V=V(d)*1e21*{T}
.param T=1e-3
.ends derivT

