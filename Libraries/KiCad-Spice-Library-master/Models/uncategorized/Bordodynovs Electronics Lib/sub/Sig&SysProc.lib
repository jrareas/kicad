.subckt sinX in out
B1 out 0 V=sin(V(in))
R1 in 0 1G
.ends sinX

.subckt cosX in out
B1 out 0 V=cos(V(in))
R1 in 0 1G
.ends cosX

.subckt expX in out
B1 out 0 V=exp(V(in))
R1 in 0 1G
.ends expX

.subckt LnX in out
B1 out 0 V=Ln(V(in))
R1 in 0 1G
.ends LnX

.subckt LogX in out
B1 out 0 V=Log10(V(in))
R1 in 0 1G
