.subckt func_ in out
B1 out 0 V=Y(V(in))
R1 in 0 1G
;.func Y(x){x*x}
.ends func_

.subckt func0 in out
B1 out 0 V=Y0(V(in))
R1 in 0 1G
;.func Y(x){x*x}
.ends func0

.subckt func1 in out
B1 out 0 V=Y1(V(in))
R1 in 0 1G
